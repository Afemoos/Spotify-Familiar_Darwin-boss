rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para Spotify App (y otras apps compartidas)
    // Permite lectura a todos (incluyendo visitantes)
    // Permite escritura solo a usuarios autenticados
    match /artifacts/{appId}/public/data/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Reglas para Grupos (Multi-Tenant)
    match /groups/{groupId} {
      // Allow Darwin to do anything (Migration/Admin)
      allow read, write: if request.auth.token.email == 'darwin47@elprivado.app';

      // Leer: Si eres el dueño O si eres miembro del grupo (verificado en subcolección members)
      // Escribir: Solo el dueño
      allow read: if request.auth != null && (
        resource.data.ownerId == request.auth.uid ||
        exists(/databases/$(database)/documents/groups/$(groupId)/members/$(request.auth.uid))
      );
      allow create: if request.auth != null; // Cualquiera puede crear un grupo
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;

      match /members/{memberId} {
         allow read: if request.auth != null; // Simplificado por ahora, idealmente verificar membresía
         allow write: if request.auth != null; // Simplificado, idealmente solo dueño o admin del grupo
      }
      
      match /payments/{paymentId} {
         allow read, write: if request.auth != null;
      }

      match /requests/{requestId} {
         allow read, write: if request.auth != null;
      }
    }

    // Reglas para Rutinas de Gym (Privado por usuario)
    // Solo el dueño de la cuenta puede leer y escribir su rutina
    match /gym_routines/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Bloquear todo lo demás por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
